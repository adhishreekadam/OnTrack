<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7260A4F1"
    android:padding="16dp">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/staatliches"
        android:text="Edit an Assignment"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/assignmentNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_margin="10dp"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="16dp"
        android:elevation="50dp"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editAssignmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D0D6E8"
            android:background="@color/black"
            android:hint="Assignment Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/assignmentClassNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_margin="10dp"
        android:layout_below="@id/assignmentNameLayout"
        android:layout_marginTop="16dp"
        android:elevation="50dp"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000">




        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editAssociatedClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D0D6E8"
            android:background="@color/black"
            android:hint="Class Name" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/assignmentDueDateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_margin="10dp"
        android:layout_below="@id/assignmentClassNameLayout"
        android:layout_marginTop="16dp"
        android:elevation="50dp"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000">




        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D0D6E8"
            android:background="@color/black"
            android:hint="Due Date"
            android:clickable="true" />
    </com.google.android.material.textfield.TextInputLayout>




    <Button
        android:id="@+id/saveButton"
        android:layout_width="301dp"
        android:layout_height="70dp"
        android:layout_below="@+id/assignmentDueDateLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="128dp"
        android:text="Save Changes"
        android:textColor="#ffffff"
        android:textSize="18sp" />






</RelativeLayout>


